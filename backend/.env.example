# Backend environment variables (example)
# Fill these with your own values and copy to backend/.env

# --- Core DB & Auth ---
DATABASE_URL=
JWT_SECRET=

# --- LLM Provider ---
# Options: anthropic | openai
LLM_PROVIDER=
LLM_MODEL=
LLM_API_KEY=
# Optional for OpenAI-compatible endpoints
OPENAI_BASE_URL=

# --- LLM Settings (optional) ---
LLM_TEMPERATURE=
LLM_TIMEOUT_SECONDS=
LLM_MAX_TOKENS=
LLM_RETRY_MAX=
LLM_BACKOFF_BASE=

# --- Agent/Tools ---
MAX_TOOL_ROUNDS=
# Optional: path to connectors config file if used
CONNECTORS_CONFIG=

# --- Google Drive (optional) ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_OAUTH_REDIRECT_URI=
GDRIVE_SHEET_SAMPLE_ROWS=
GDRIVE_MAX_SHEETS=
GDRIVE_SHEET_MAX_COLS=
GDRIVE_SHEET_SAMPLE_WINDOW_ROWS=

# --- Limits (optional) ---
CONTEXT_MAX_TERMS=
CONTEXT_MAX_MAPPINGS=
DATASET_REVIEW_MAX_ENTITIES_PER_CALL=
REL_MAX_ENTITIES=
REL_MAX_FIELDS_PER_ENTITY=
REL_MAX_RELATIONSHIPS=
